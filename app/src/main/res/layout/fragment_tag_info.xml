<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TagInfoFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_info_tag_id"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_info_tag_tech"
        android:id="@+id/textView6"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTagId"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTagTech"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_info_ndef_type"
            android:id="@+id/textView"
            android:layout_marginTop="14dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNdefType"
            android:layout_alignTop="@+id/textView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_info_ndef_payload"
            android:id="@+id/textView3"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_marginStart="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNdefPayload"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignStart="@+id/textViewNdefType" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_info_ndef_id"
            android:id="@+id/textView7"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_marginStart="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNdefId"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignStart="@+id/textViewNdefPayload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_info_ndef_tnf"
            android:id="@+id/textView4"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_marginStart="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNdefTnf"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignStart="@+id/textViewNdefId" />
    </RelativeLayout>

</RelativeLayout>
